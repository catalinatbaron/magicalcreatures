<h1 class="text-center">Post review for <%= @creature.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.input :description %>
        <%= f.input :rating %>
        <%= f.submit "Add review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
