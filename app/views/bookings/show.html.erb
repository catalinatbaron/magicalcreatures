<div class="container">
  <h1 class="text-center page-header"> Bookings for <%= @booking.creature.name %></h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> Start Time </th>
        <th scope="col"> End Time </th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
       <td> <%= @booking.start_time.to_formatted_s(:short) %> </td>
       <td> <%= @booking.end_time.to_formatted_s(:short) %> </td>
       <td> <%= link_to 'Review', new_booking_review_path(@booking), class: "link" %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'go back', creature_path(@booking.creature), class: "btn btn-primary" %>
</div>
