<div class="container">
  <h1 class="text-center page-header">You booked the <%= @booking.creature.name %>!</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">From</th>
        <th scope="col">Until</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
        <th scope="col">Review</th>
      </tr>
    </thead>
    <tbody>
      <tr>
       <td> <%= @booking.start_time.to_formatted_s(:short) %> </td>
       <td> <%= @booking.end_time.to_formatted_s(:short) %> </td>
       <td> <%= link_to 'Edit booking', edit_creature_booking_path(@booking), class: 'link' %></td>
       <td><%= link_to 'Delete booking', booking_path(@booking), method: :delete, class: 'link'%></td>
       <td> <%= link_to 'Add a Review', new_booking_review_path(@booking), class: "link" %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Back', my_bookings_bookings_path, class: "btn btn-success" %>
</div>
