<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= simple_form_for [@creature, @booking] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :start_time, as: :datetime, html5: true, label: "Dates", placeholder: "From", wrapper_html: { class: "inline_field_wrapper" }%>
        <%= f.input :end_time, as: :datetime, html5: true, label: '&nbsp;'.html_safe, placeholder: "To", wrapper_html: { class: "inline_field_wrapper" }%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary btn-booking' %>
      </div>
    <% end %>
  </div>
</div>

