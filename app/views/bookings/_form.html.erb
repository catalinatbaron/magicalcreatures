<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= simple_form_for [@creature, @booking] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :start_time, as: :string, required: false, label: "Dates", placeholder: "From", input_html: { class: "datepicker" }%>
        <%= f.input :end_time, as: :string, required: false, label: '&nbsp;'.html_safe, placeholder: "To", input_html: { class: "datepicker" }%>
      </div>
      <script type="text/javascript">
        const el = document.getElementById('bar');
        flatpickr(el);
      </script>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary btn-booking' %>
      </div>
    <% end %>
  </div>
</div>

