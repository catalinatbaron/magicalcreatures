<div class="container">
  <h1 class="text-center page-header">My Creatures!</h1>
  <div class="container">
    <div class="col">
      <table class="table">
        <% if current_user.creatures.count > 0 %>
        <thead>
          <tr>
            <th>Creature</th>
            <th>Name</th>
            <th>Super Power</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% current_user.creatures.each do |creature| %>
          <tr>
            <td>
              <% if creature.photo.present? %>
              <%= link_to creature_path(creature) do %>
              <%=  cl_image_tag creature.photo, :crop=>"scale", :size => "100x100" %>
              <% end %>
              <% end %>
            </td>
            <td><%=creature.name%></td>
            <td><%= creature.super_power %></td>
            <td><%= creature.description %></td>
            <td><%= link_to "Edit #{creature.name}", edit_creature_path(creature), class: 'link'%></td>
            <td><%= link_to "Delete #{creature.name}", creature_path(creature), method: :delete , class: 'link'%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <% else %>
      <h3 class="text-center"> Oh! You haven't added any of your creatures yet! </h3>
      <% end %>
    </div>
    <div class="container">
      <ul class="list-inline text-center">
        <li class="list-inline-item">
          <%= link_to 'Add a Creature', new_creature_path, class: "btn btn-primary" %>
        </li>
        <li class="list-inline-item">
          <%= link_to 'Back to creatures', creatures_path, class: "btn btn-success" %>
        </li>
      </ul>
    </div>
