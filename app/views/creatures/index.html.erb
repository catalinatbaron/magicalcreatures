<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>Magical Creatures</h1>
      <h4><%= link_to 'Add a Creature!', new_creature_path %></h4>
      <% @creatures.each do |creature| %>
      <li>

        <%= creature.name %> | <%= creature.super_power %> | <%= creature.price %>
        <%= link_to 'Details', creature_path(creature.id) %>
        <% if creature.photo.present?  %>
            <%=  cl_image_tag creature.photo %>
        <% end %>

      </li>
      <% end %>
    </div>
  </div>
</div>
