<div class="container">
  <h1 class="text-center page-header">Magical Creatures</h1>
</div>
<div class="container">
  <%= form_tag creatures_path, method: :get do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control",
  placeholder: "Find a creature"
  %>
<% end %>
</div>


<div class="container">
  <div class="row card-group">
    <% @creatures.each do |creature| %>
      <div class="col-sm-4">
        <!-- <div class="card"> -->
          <div class="text-center">
            <% if creature.photo.present?  %>
              <%=  cl_image_tag creature.photo, :width=>300, :height=>300, :crop=>"fill" %>
            <% end %>
          </div>
          <div class="card-body text-center">
              <h2 class="card-title"> <%= creature.name %> </h2>
              <p class="card-text"> <strong>Slogan:</strong> <%= creature.super_power %> </p>
              <p class="card-text"> <strong>Price per Hour:</strong> <%= creature.price %> </p>
              <%= link_to 'Details', creature_path(creature.id), class: "link" %>
          </div>
        <!-- </div> -->
      </div>
    <% end %>
  </div>
</div>

<div class="container text-center">
  <%= link_to 'Add a Creature!', new_creature_path, class: "btn btn-primary" %>
</div>





