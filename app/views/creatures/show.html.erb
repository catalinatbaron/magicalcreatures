<div class="container">
  <h2> Reviews </h2>
  <table class="table">
    <% @reviews.each do |review| %>
      <tr>
        <td> <%= review.description %> </td>
        <td> <%= review.rating %> </td>
      </tr>
    <% end %>
  </table>

  <ul class="list-inline">
    <li class="list-inline-item"> <%= link_to 'Edit Creature', edit_creature_path, class: "btn btn-primary" %>
      <% if policy(@creature).update?%>
        <%= link_to 'Edit', edit_creature_path(@creature)%>
      <% end %>
      <% if policy(@creature).destroy?%>
        <%= link_to 'Delete', creature_path(@creature), method: :delete, data: { confirm: 'Are you sure?' }  %>
      <% end %>
    </li>
    <li class="list-inline-item"> <%= link_to 'Back', creatures_path, class: "btn btn-primary" %></li>
    <li><%= link_to 'Book a creature', new_creature_booking_path(@creature), class: "btn btn-primary" %></li>
  </ul>
</div>
